#!/bin/sh
#
# $Id$
#

set -ex

. ./autogen.sh

# autoconf prior to 2.62 has issues with zsh 4.2 and newer
export CONFIG_SHELL=/bin/sh

./configure \
	--with-oath \
	--with-doc \
	--with-pam-unix \
	--with-pamtest \
	--with-su \
	--with-modules-dir=/usr/lib \
	--enable-debug \
	--enable-developer-warnings \
	--enable-werror \
	"$@"
